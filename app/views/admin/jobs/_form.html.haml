= simple_form_for [:admin, @job], html: {role:'form'} do |f|
  = f.error_notification

  .form-inputs
    = f.input :job_name
    = f.association :jobs_category, label_method: :category_name , prompt: "Choose a Category"
    = f.input :job_description,as: :text, input_html:{class: 'wysihtml5'}
  .form-actions
    = f.button :submit

:javascript
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
