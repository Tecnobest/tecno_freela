= simple_form_for @job, html: {role:'form'} do |f|
  = f.error_notification

  .form-inputs
    %p.lead Job information
    %hr
    = f.input :job_name
    = f.association :jobs_category, label_method: :category_name , value_method: :id, prompt: "Choose a Category"
    = f.input :job_description,as: :text, input_html:{class: 'wysihtml5',rows:'10'}
    = f.input :job_apply, as: :text, input_html:{rows:'6'}
    = f.input :company_logo
  .form-actions
    = f.button :submit

:javascript
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
