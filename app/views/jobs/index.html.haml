.page-header
  %h1 Listing jobs

.row
  .col-lg-9
    - @jobs.each do |job|
      .media
        -#= image_tag "http://placehold.it/200x120", class: 'img-thumbnail pull-left'
        = image_tag job.company_logo_url, class: 'img-thumbnail pull-left'
        .media-body
          %h3.media-heading= link_to job.job_name, job
          %p= truncate(job.job_description, length: 200) {link_to "See Details", job}
          = job.jobs_category
          = job.created_at
  .col-lg-3
    = render 'sidebar'
